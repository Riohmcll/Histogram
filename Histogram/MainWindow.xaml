<Window x:Class="Histogram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Histogram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Keyboard.KeyDown="Window_KeyDown"
        
        >
    <Grid>
        <Image Name="RefImage" HorizontalAlignment="Left" Height="419" Margin="393,0,0,0" VerticalAlignment="Top" Width="399"/>
        <Image Name="HistogramImage" HorizontalAlignment="Left" Height="207" Margin="10,166,0,0" VerticalAlignment="Top" Width="378"/>
        
        <Button Click="Button_Click" Content="ChangeFile" HorizontalAlignment="Left" Margin="44,59,0,0" VerticalAlignment="Top" Width="75"/>
        <Slider Name="Satvalue"  ValueChanged="Slider_ValueChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,105,0,0" Width="361" Value="50" Maximum="100"/>
        <Slider Name="ValValue"  ValueChanged="Slider_ValueChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,82,0,0" Width="361" Value="50" Maximum="100"/>
        <Label Name="Stat"  Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="32,132,0,0" Width="436"/>
    </Grid>
</Window>
